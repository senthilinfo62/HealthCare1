    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textGreen</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/arialth</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->

    </style>
    <!-- Base application theme. -->
        <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
            <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/arialth</item>
        </style>



    <style name="TextNormal">
        <item name="android:textStyle">normal</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
        <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
            <item name="color">@color/actionBarText</item>
        </style>

        <declare-styleable name="CircularSeekBar">
            <attr name="progress1" format="integer" />
            <attr name="max1" format="integer" />
            <attr name="move_outside_circle1" format="boolean" />
            <attr name="maintain_equal_circle1" format="boolean" />
            <attr name="use_custom_radii1" format="boolean" />
            <attr name="lock_enabled1" format="boolean" />
            <attr name="circle_x_radius1" format="dimension" />
            <attr name="circle_y_radius1" format="dimension" />
            <attr name="circle_stroke_width1" format="dimension" />
            <attr name="pointer_radius1" format="dimension" />
            <attr name="pointer_halo_width1" format="dimension" />
            <attr name="pointer_halo_border_width1" format="dimension" />
            <attr name="circle_color1" format="color" />
            <attr name="circle_progress_color1" format="color" />
            <attr name="pointer_color1" format="color" />
            <attr name="pointer_halo_color1" format="color" />
            <attr name="pointer_halo_color_ontouch1" format="color" />
            <attr name="pointer_alpha_ontouch1" format="integer" />
            <attr name="start_angle1" format="float" />
            <attr name="end_angle1" format="float" />
            <attr name="circle_fill1" format="color" />
        </declare-styleable>


    <color name="textGreen">#00695C</color>
</resources>
